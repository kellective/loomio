= render '/application/mailer_doctype'
%html
  %p= t("email.proposal_blocked.intro")
  %p
    = link_to(t("email.view_proposal"), discussion_url(@motion.discussion, proposal: @motion))

  %table
    %tr
      %th= t :proposal
      %td= @motion.name
    %tr
      %th= t :discussion
      %td= @discussion.title
    %tr
      %th= t :group
      %td= @motion.group.name

    - if @motion.description.present?
      %tr
        %th &nbsp;
        %td &nbsp;
      %tr
        %th= :details
        %td= @motion.description

  = render 'user_mailer/unsubscribe_link'
