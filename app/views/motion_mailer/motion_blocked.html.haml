= render '/application/mailer_doctype'
%html
  %p A proposal you are facilitating has been blocked.
  %p
    = link_to("Click here to view this proposal", "#{discussion_url(@motion.discussion, proposal: @motion)}")
  %table
    %tr
      %th Proposal
      %td= link_to @motion.name, discussion_url(@motion.discussion, proposal: @motion)
    %tr
      %th Discussion
      %td= @discussion.title
    %tr
      %th Group
      %td= @motion.group.name

    / - if @motion.has_close_date?
    /   %tr
    /     %th Closes in
    /     %td= time_ago_in_words(@motion.close_date + @motion.close_date.localtime.strftime('%a %d %b %Y, %I:%M%p, %Z'))

    - if @rendered_motion_description.present?
      %tr
        %th &nbsp;
        %td &nbsp;
      %tr
        %th Details
        %td= @rendered_motion_description

  %p
    = link_to("Click here to view this proposal", "#{discussion_url(@motion.discussion, proposal: @motion)}")

  = render 'user_mailer/unsubscribe_link'
